// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String
  sessions      Session[]
  favoriteCoins FavoriteCoin[]
}

model FavoriteCoin {
  id     String @id @default(cuid())
  userId String
  coinId String
  symbol String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@unique([userId, coinId])
}