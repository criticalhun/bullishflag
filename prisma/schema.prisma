// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

// Az Account táblát töröltük
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  sessions      Session[]
  favoriteCoins FavoriteCoin[]
  // Az accounts sort töröltük
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  @@unique([identifier, token])
}

model FavoriteCoin {
  id     String @id @default(cuid())
  userId String
  coinId String
  symbol String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@unique([userId, coinId])
}